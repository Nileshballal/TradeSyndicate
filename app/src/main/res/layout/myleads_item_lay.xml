<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_digital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_disable"
                android:maxLines="5"
                android:layout_marginLeft="2dp"
                android:textSize="14dp"
                android:text=""/>
            <TextView
                android:id="@+id/txt_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="200"
                android:maxLines="3"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:textSize="12dp"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_gravity="center|left"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty:100"
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_red_dark"/>
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid:20 Feb"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:id="@+id/txt_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget:5000"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/green"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified"
                    android:textSize="14dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/green"/>

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:layout_width="185dp"
                    android:layout_height="30dp"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:scaleX=".5"
                    android:rating="5"
                    android:scaleY=".5"
                    android:visibility="gone"
                    android:transformPivotX="0dp"
                    android:layout_marginLeft="20dp"
                    android:transformPivotY="0dp"
                    android:layout_gravity="center|right"
                    android:max="5"
                    android:textSize="14dp"
                    android:textColor="@color/color_tab_5"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>